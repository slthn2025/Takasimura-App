<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Warna lingkaran -->
    <solid android:color="#FFFFFF" />

    <!-- Border lingkaran -->
    <stroke
        android:width="3dp"
        android:color="@color/Dark3" />

    <!-- Elevasi lingkaran (bayangan) -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />

    <!-- Ukuran lingkaran -->
    <size
        android:width="100dp"
        android:height="100dp" />

</shape>
